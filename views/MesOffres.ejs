<%- include('parts/header')%>
    <%- include('parts/navbar')%>


        <div class="container">

            <% if(items.length===0) {%>
                <p class="alert alert-danger"> Aucune Offre</p>
                <% } else { %>

                    <table>
                        <thead>

                            <td>offre</td>

                            <td>prix </td>

                            <td></td>
                        </thead>

                        <tbody>
                            <% for (let i=0 ; i < items.length ; i++) {%>
                                <tr>
                                    <td>
                                        <%= i+1%>
                                    </td>
                                    <form method="POST">
                                        <td> <input type="text" name="nomOffre" class="form-control"
                                                value="<%= items[i].nomOffre%>"></td>

                                        <td> <input type="text" name="prix" class="form-control"
                                                value="<%= items[i].prix%>"></td>


                                        <td>
                                            <input type="hidden" name="productId" value="<%= items[i]._id %>">
                                            <input type="submit" class="btn btn-success" value="Save"
                                                formaction="/MesOffres/save">
                                            <input type="submit" class="btn btn-danger" value="Delete"
                                                formaction="/MesOffres/delete">
                                        </td>

                                    </form>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                    <%}%>

        </div>